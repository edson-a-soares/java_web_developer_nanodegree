pipeline {

    agent any

    environment {
        APPLICATION_DIRECTORY         = 'eCommerce'
        WORKSPACE                     = pwd()
    }

    options {
        skipDefaultCheckout()
        skipStagesAfterUnstable()
    }

    stages {

        stage ('SCM Checkout') {

            steps {
                checkout scm
            }

        }

        stage ('Tests') {

            when {
                anyOf {
                    changeset "${APPLICATION_DIRECTORY}/**/*"
                }
            }

            steps {
                script {
                    sh 'echo $HOME'
                }
            }

        }

        stage ('Deploy') {

            when {
                anyOf {
                    changeset "${APPLICATION_DIRECTORY}/**/*"
                }
            }

            steps {
                script {
                    sh 'echo $HOME'
                }
            }

        }

    }   // Stages

}       // Pipeline
